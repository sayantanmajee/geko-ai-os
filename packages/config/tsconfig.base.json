{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "bundler",
    "strict": true,                // üõ°Ô∏è Safety: No "any" allowed implicitly
    "skipLibCheck": true,          // ‚ö° Speed: Don't check node_modules types
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,  // üõ°Ô∏è Modern: Explicit imports/exports
    "noEmit": true                 // We use Turbo/Vite to build, not tsc
  }
}