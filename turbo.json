{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "LOG_LEVEL"],
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "type-check": {}
  }
}